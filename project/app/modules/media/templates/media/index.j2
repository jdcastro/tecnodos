{# templates/media/index.j2 #}
{% extends "base.j2" %}
{% block content %}
<div class="p-4 space-y-4">
  <div class="flex items-center justify-between">
    <form method="get" class="flex gap-2">
      <input name="q" value="{{ form.q.data or '' }}" placeholder="Search media..." class="border px-3 py-2 rounded w-64" />
      <button class="px-3 py-2 rounded bg-black text-white">Search</button>
    </form>
    <a href="{{ url_for('media.upload') }}" class="px-3 py-2 rounded bg-emerald-600 text-white">Upload</a>
  </div>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3">
    {% for it in items %}
      <a href="{{ url_for('media.detail', asset_id=it.id) }}" class="border rounded overflow-hidden hover:ring">
        <div class="aspect-square bg-gray-100 flex items-center justify-center text-xs">
          {{ it.original_name }}
        </div>
        <div class="p-2 text-xs text-gray-600">{{ it.mime }} · {{ it.width }}×{{ it.height }}</div>
      </a>
    {% else %}
      <div class="text-gray-500 col-span-full">No media found.</div>
    {% endfor %}
  </div>
</div>
{% endblock %}
