{# templates/media/upload.j2 #}
{% extends "base.j2" %}
{% block content %}
<div class="p-4 space-y-4">
  <h1 class="text-xl font-semibold">Upload media</h1>
  <form id="local-form" class="border rounded p-4 space-y-3" enctype="multipart/form-data">
    <input type="file" name="file" class="block border p-2 rounded w-full" />
    <button type="submit" class="px-3 py-2 rounded bg-emerald-600 text-white">Upload (local/dev)</button>
  </form>
  <div id="result" class="text-sm text-gray-700"></div>
  <hr/>
  <div class="space-y-2">
    <h2 class="font-semibold">S3 Direct (presigned)</h2>
    <button id="btn-presign" class="px-3 py-2 rounded bg-black text-white">Get Presigned</button>
    <div id="presign-box" class="text-xs text-gray-700"></div>
  </div>
</div>
<script src="{{ url_for('media.static', filename='media/media.js') }}"></script>
{% endblock %}
